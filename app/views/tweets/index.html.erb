<h1>Hello Tweets</h1>

<%= form_tag search_path, method: :post, class: "navbar-form navbar-left search-form" do %>
  <%= text_field_tag 'search_text', @search_text, placeholder: 'Search'%>
  <%= submit_tag 'Search' %>
<% end %>

<%= button_to 'next', { controller: 'tweets', action: 'search', page: (@page + 1), search_text: @search_text }, { method: :post } %>

<% if @tweets.present? %>
  <h1><%= @search_text %></h1>
  <table>
    <thead>
      <th>user id</th>
      <th>body</th>
    </thead>
    <tbody>
      <% @tweets.collect do |tweet| %>
        <tr>
          <td><%= tweet[:user][:screen_name] %></td>
          <td><%= tweet[:text] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
